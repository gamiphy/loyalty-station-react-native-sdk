{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "declaration": true,
    "lib": ["es6"],                           /* Specify library files to be included in the compilation. */
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
